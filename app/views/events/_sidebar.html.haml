#sidebar
  %ul
    %li
      %h2 Menú
      %ul
        - if controller.action_name == 'index'
          %li
            = link_to 'Nuevo', new_project_event_path(@project)
        - else
          %li
            = link_to 'Inicio', project_events_path(@project)
        - if controller.action_name == 'show'
          %li
            = link_to 'Editar', edit_project_event_path(@project, @event)
          %li
            = link_to 'Eliminar', [@project, @event], :method => :delete, 
                      :confirm => "¿Está seguro que desea eliminar el #{Event.model_name.human}?"
        %li
          = link_to 'Volver', :back
/ end #sidebar
