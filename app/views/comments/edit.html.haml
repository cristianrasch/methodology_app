= content_for :title, "Editando #{Comment.model_name.human}"
= content_for :sidebar do
  = render 'sidebar'
  
= form_for @comment, :html => {:multipart => true} do |f|
  = render f
  
  %p
    = f.label :recipient_ids
    %br/
    = f.collection_select(:user_ids, @comment.commentable.project.users, :id, :name, 
                          {:include_blank => true}, :multiple => true)
  
  = f.submit 'Actualizar'
  
